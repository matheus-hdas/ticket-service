generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Ticket {
  id           String   @id @default(cuid())
  nome         String
  prioridade   Prioridade
  departamento Departamento

  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@map("tickets")

  @@index([nome])
  @@index([prioridade])
  @@index([departamento])
  @@index([criadoEm])
}

enum Prioridade {
  BAIXA
  MEDIA
  ALTA
  CRITICA
}

enum Departamento {
  FINANCEIRO
  SUPORTE
  TI
  COMERCIAL
  RH
}
